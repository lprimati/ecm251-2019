<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label prefHeight="30.0" prefWidth="229.0" text="Operando 1" />
      <HBox GridPane.rowIndex="5" GridPane.valignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#sum" text="+">
               <HBox.margin>
                  <Insets left="4.0" right="4.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#sub" text="-">
               <HBox.margin>
                  <Insets left="4.0" right="4.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#Multi" text="X">
               <HBox.margin>
                  <Insets left="4.0" right="4.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#div" text=":" />
         </children>
         <padding>
            <Insets left="8.0" right="8.0" />
         </padding>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </HBox>
      <TextField fx:id="txtValue1" promptText="Informe um valor" GridPane.columnSpan="2" GridPane.rowIndex="1" />
      <Label text="Operando 2" GridPane.rowIndex="2" />
      <TextField fx:id="txtValue2" promptText="Informe outro valor" GridPane.columnSpan="2" GridPane.rowIndex="3" />
      <Label text="Resultado:" GridPane.rowIndex="4" />
      <Label fx:id="lblRes" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   </children>
</GridPane>
